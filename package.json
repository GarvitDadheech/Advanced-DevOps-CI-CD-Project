{
  "name": "devsecops-demo-app",
  "version": "1.0.0",
  "description": "Production-grade DevSecOps CI/CD Demo Project",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "test": "jest --coverage",
    "lint": "eslint src/ tests/",
    "lint:security": "eslint src/ tests/ --plugin security",
    "build": "echo 'Build completed successfully'"
  },
  "keywords": [
    "devsecops",
    "cicd",
    "nodejs",
    "github-actions",
    "docker"
  ],
  "author": "DevOps Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2"
  },
  "devDependencies": {
    "eslint": "^8.56.0",
    "eslint-plugin-security": "^2.1.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.3"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/index.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 60,
        "functions": 60,
        "lines": 60,
        "statements": 60
      }
    }
  }
}
